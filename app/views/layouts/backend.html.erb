<!DOCTYPE html>
<html>

<head>

	<title>LUCKY BAG & SWALLOW: BACKEND SYSTEM</title>
	<link rel="shortcut icon" href="<%= asset_path 'm.png'%>">
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
     <%= csrf_meta_tags %>



</head>

<body>

  <% if user_signed_in? %>

        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">LUKCY BAGS</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
               

              <!-- about us -->
              	 <li ><%= link_to 'About Us', edit_aboutu_path(1) %></li>

                <!-- customers -->
                 <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">CUSTOMERS <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Add New Customers', new_customer_path %></li>
                    <li><%= link_to 'Edit Existing Customers', customers_path %></li>
                  </ul>
                </li>

                <!-- main products -->
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> MAIN PRODUCTS <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Add New Main Products', new_main_product_path %></li>
                    <li><%= link_to 'Edit Existing Products', main_products_path %></li>
                  </ul>
                </li>

                <!-- products -->
                 <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">PRODUCTS <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                        <li><%= link_to 'Add New Main Products', new_product_path %></li>
                        <li><%= link_to 'Edit Existing Products', products_path %></li>
                  </ul>
                </li>

              </ul>
            
              <ul class="nav navbar-nav navbar-right">
                <li>  <%= link_to "Log out", destroy_user_session_path, :method => :delete  %></li>
              </ul>



            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

    <% else %>


    <% end %>


	<%= yield %>

	

</body>

</html>


